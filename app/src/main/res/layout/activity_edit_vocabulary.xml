<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.EditVocabularyActivity">

    <!-- the scroll-view for the item-card -->
    <ScrollView
            android:layout_weight="11"
            android:layout_width="match_parent"
            android:layout_height="0dp">

        <!-- the editing vocabulary's item-card -->
        <com.rekkursion.enigma.views.itemcard.VocabularyItemCard
                android:id="@+id/item_card_at_edit_vocabulary_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
    </ScrollView>

    <!-- the cancel & submit button-bar -->
    <com.rekkursion.enigma.views.CancelOrSubmitButtonBar
            android:id="@+id/cancel_or_submit_button_bar_at_edit_vocabulary_activity"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
</androidx.appcompat.widget.LinearLayoutCompat>